# Backend Configuration
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-256-bit-secret-here

# Database
DATABASE_PATH=./database/learning_english.db

# CORS
CORS_ORIGIN=http://localhost:3000
# For multiple origins: http://localhost:3000,https://yourdomain.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration (Sendgrid, Mailgun, AWS SES, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password

# Firebase Admin SDK (Backend only - NEVER commit these values)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"

# Firebase Web App SDK (Frontend - Prefix with REACT_APP_)
REACT_APP_FIREBASE_API_KEY=your-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
REACT_APP_FIREBASE_APP_ID=1:your-app-id:web:xxxxxx
REACT_APP_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api

# Logging
LOG_LEVEL=info
# Levels: error, warn, info, http, verbose, debug, silly
