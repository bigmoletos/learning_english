# ========================================
# CONFIGURATION POSTGRESQL
# ========================================
POSTGRES_USER=infisical
POSTGRES_PASSWORD=CHANGEZ_CETTE_CLE_SECRETE_POSTGRES
POSTGRES_DB=infisical

# ========================================
# CONFIGURATION REDIS
# ========================================
REDIS_PASSWORD=CHANGEZ_CETTE_CLE_SECRETE_REDIS

# ========================================
# CONFIGURATION SERVEUR INFISICAL
# ========================================
# URLs publiques (remplacer par votre domaine)
SERVER_URL=https://infisical.example.com
SITE_URL=https://infisical.example.com

# ========================================
# CLÉS DE CHIFFREMENT
# ========================================
# Générer avec: openssl rand -base64 32 (pour chaque clé)
ENCRYPTION_KEY=CHANGEZ_CETTE_CLE_CHIFFREMENT_PRINCIPALE
JWT_SIGNUP_SECRET=CHANGEZ_CETTE_CLE_JWT_SIGNUP
JWT_REFRESH_SECRET=CHANGEZ_CETTE_CLE_JWT_REFRESH
JWT_AUTH_SECRET=CHANGEZ_CETTE_CLE_JWT_AUTH
JWT_SERVICE_SECRET=CHANGEZ_CETTE_CLE_JWT_SERVICE

# ========================================
# CONFIGURATION SMTP (ENVOI EMAILS)
# ========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=votre-email@gmail.com
SMTP_PASSWORD=votre-app-password-gmail
SMTP_FROM_EMAIL=noreply@infisical.example.com
SMTP_FROM_NAME=Infisical

# ========================================
# OPTIONS
# ========================================
ENABLE_SIGNUP=true
ENCRYPTION_ALGORITHM=aes-256-gcm

# ========================================
# NOTES
# ========================================
# 1. Remplacer toutes les valeurs CHANGEZ_* par des valeurs sécurisées
# 2. Générer les clés avec: openssl rand -base64 32
# 3. Configurer SERVER_URL et SITE_URL avec votre domaine
# 4. Configurer SMTP pour les emails (recommandé: Gmail avec App Password)
# 5. Sauvegarder ce fichier dans un gestionnaire de secrets sécurisé

