{
  "$schema": "https://modelcontextprotocol.io/schema/config.json",
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/mnt/c/programmation/learning_english"
      ],
      "description": "Optimized file system access for the project"
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git"],
      "env": {
        "GIT_DIR": "/mnt/c/programmation/learning_english/.git"
      },
      "description": "Advanced Git operations and history analysis"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "description": "GitHub API integration for issues, PRs, and CI/CD"
    },
    "firebase": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-firebase"],
      "env": {
        "FIREBASE_PROJECT_ID": "your-firebase-project-id",
        "GOOGLE_APPLICATION_CREDENTIALS": "${HOME}/.config/firebase/service-account.json"
      },
      "description": "Firebase operations (Firestore, Auth, Functions, Storage)"
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite"],
      "env": {
        "DATABASE_PATH": "/mnt/c/programmation/learning_english/backend/database/development.sqlite"
      },
      "description": "SQLite database operations for backend"
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      },
      "description": "Web search capabilities"
    }
  },
  "mcpTimeout": 30000,
  "mcpRetries": 3,
  "mcpConcurrency": 5
}
