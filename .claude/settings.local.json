{
  "permissions": {
    "allow": [
      "Bash(claude install:*)"
    ],
    "deny": [],
    "ask": []
  },
  "statusLine": {
    "type": "command",
    "command": "bash /mnt/c/programmation/learning_english/.claude/scripts/statusline.sh"
  },
  "hooks": {
    "tool-use": {
      "Edit": [
        "bash .claude/hooks/auto-lint-on-edit.sh {{file_path}}"
      ],
      "Write": [
        "bash .claude/hooks/auto-lint-on-edit.sh {{file_path}}"
      ]
    },
    "tool-result": {
      "Bash": [
        "if [[ '{{command}}' == *'npm install'* ]]; then bash .claude/hooks/post-npm-install.sh; fi"
      ]
    },
    "user-prompt-submit": [
      "if git diff --cached --quiet; then true; else bash .claude/hooks/pre-commit-check.sh; fi"
    ]
  },
  "autoSave": true,
  "theme": {
    "colors": {
      "primary": "#007ACC",
      "success": "#4CAF50",
      "warning": "#FFC107",
      "error": "#F44336",
      "info": "#2196F3"
    }
  }
}
